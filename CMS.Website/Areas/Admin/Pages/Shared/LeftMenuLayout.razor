                    <li><a href="/Identity/Account/Logout"><i class="fa fa-power-off"></i> Đăng xuất</a></li>
                </ul>
            </div>
            <p class="profile-text m-t-15 font-16"><a href="/Admin/Account/EditProfile"> @globalModel.user.Identity.Name</a></p>
        </div>
    </div>
    <nav class="sidebar-nav">
        <ul id="side-menu">
          
                <li class="active">
                    <a class="waves-effect" href="javascript:void(0);" aria-expanded="true"><i class="icon-screen-desktop fa-fw"></i> <span class="hide-menu"> Quản lý quảng cáo </span></a>
                    <ul aria-expanded="true" class="collapse">
                        <li> <a href="/Admin/Advertising/Edit">Thêm mới quảng cáo</a> </li>
                        <li> <a href="/Admin/Advertising">Danh sách quảng cáo</a> </li>              
                    </ul>
